<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>$(DefaultTargetFramework)</TargetFramework>
        <Version>$(AevatarSourceCodeVersion)</Version>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageType>Dependency</PackageType>
        <PackageId>Aevatar</PackageId>
        <Title>aevatar Framework</Title>
        <Authors>AElf</Authors>
        <Description>A distributed AI agent-based framework built on Microsoft Orleans for building scalable event-sourced applications.</Description>
        <PackageTags>agent</PackageTags>
        <RepositoryUrl>https://github.com/aevatarAI/aevatar-framework</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageProjectUrl>https://github.com/aevatarAI/aevatar-framework</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Orleans.Runtime" />
        <PackageReference Include="Volo.Abp.Authorization" />
        <PackageReference Include="Volo.Abp.Authorization.Abstractions" />
        <PackageReference Include="Volo.Abp.Core" />
        <PackageReference Include="Volo.Abp.Autofac" />
        <PackageReference Include="Volo.Abp.AutoMapper" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Aevatar.PermissionManagement\Aevatar.PermissionManagement.csproj" />
      <ProjectReference Include="..\Aevatar.Plugins\Aevatar.Plugins.csproj" />
    </ItemGroup>

</Project>
