<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <FodyEnabled>true</FodyEnabled>
    <FodyRunWeavers>true</FodyRunWeavers>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" />
    <PackageReference Include="OpenTelemetry.Exporter.Console" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Runtime" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/Aevatar.Core.Abstractions/Aevatar.Core.Abstractions.csproj" />
    <ProjectReference Include="../../src/Aevatar.Core/Aevatar.Core.csproj" />
    <ProjectReference Include="../../src/Aevatar.Core.Interception/Aevatar.Core.Interception.csproj" />
  </ItemGroup>

  <ItemGroup>
    <WeaverFiles 
      Include="../FodyTracingWeaverDemo/bin/$(Configuration)/net9.0/MethodTracing.Fody.dll" 
      WeaverClassNames="MethodTracingWeaver" />
  </ItemGroup>

</Project>
